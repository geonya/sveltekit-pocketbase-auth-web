{
	"trailingComma": "all",
	"tabWidth": 2,
	"semi": true,
	"singleQuote": true,
	"printWidth": 80,
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": "*.ts",
			"options": {
				"parser": "typescript"
			}
		}
	],
	"pluginSearchDirs": [
		"."
	]
}